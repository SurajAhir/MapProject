<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ShowItemsOnClickOnList">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/click_title"
    android:textSize="25sp"
    android:textStyle="bold"
    android:textColor="@color/black"
    android:text="title"
    android:paddingLeft="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/click_created_date"
        android:text="createdAt:14/20/2012"
        android:textColor="@color/purple_700"
        android:gravity="center"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/default_image"
        android:id="@+id/click_imageview"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/click_updated_date"
        android:text="updatedAt:14/20/2012"
        android:textColor="@color/purple_500"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/click_prices_title"
        android:text="pricesTitle"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#1C1B1B"
        android:layout_marginLeft="8dp"
        android:gravity="start"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/click_prices_amount"
        android:text="Rs."
        android:textColor="#877F7F"
        android:gravity="center_horizontal"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/click_description"
        android:text="Description"
        android:textSize="16sp"
        android:textColor="#877F7F"
        android:gravity="start"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/click_contact_info"
        android:text="Contact: "
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textColor="#877F7F"
        android:gravity="start"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/click_emailId"
        android:text="email : "
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textColor="#877F7F"
        android:gravity="start"/>

</LinearLayout>